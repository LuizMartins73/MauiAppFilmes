<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.cateogorias.guerra"
             Title="guerra">
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="300,300,300" RowDefinitions="*,*" Padding="2">
                <ImageButton Grid.Row="0" Grid.Column="0" Clicked="abtg1_Clicked" x:Name="abtg1" Source="guerra.jpg" ></ImageButton>
                <ImageButton Grid.Row="0" Grid.Column="1" Clicked="abtg2_Clicked" x:Name="abtg2" Source="guerra2.jpg" ></ImageButton>
                <ImageButton Grid.Row="1" Grid.Column="0" Clicked="abtg3_Clicked" x:Name="abtg3" Source="guerra3.webp" ></ImageButton>
                <ImageButton Grid.Row="1" Grid.Column="1" Clicked="abtg4_Clicked" x:Name="abtg4" Source="guerra4.webp" ></ImageButton>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>