<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.cateogorias.aventura"
             Title="aventura">
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="300,300,300" RowDefinitions="*,*" Padding="2">
                <ImageButton Grid.Row="0" Grid.Column="0" x:Name="abtna1" Clicked="abtna1_Clicked" Source="aventura1.jpg"  ></ImageButton>
                <ImageButton Grid.Row="0" Grid.Column="1" x:Name="abtna2" Clicked="abtna2_Clicked" Source="aventura2.jpg"></ImageButton>
                <ImageButton Grid.Row="1" Grid.Column="0" x:Name="abtna3" Clicked="abtna3_Clicked" Source="aventura3.jpg"></ImageButton>
                <ImageButton Grid.Row="1" Grid.Column="1" x:Name="abtna4" Clicked="abtna4_Clicked" Source="aventura4.jpg" ></ImageButton>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>